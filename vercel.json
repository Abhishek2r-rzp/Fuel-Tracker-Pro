{
  "buildCommand": "bash build-for-vercel.sh",
  "outputDirectory": "dist",
  "framework": null,
  "rewrites": [
    {
      "source": "/fuel-tracker/:path((?!.*\\.).*)",
      "destination": "/fuel-tracker/index.html"
    },
    {
      "source": "/expense-tracker/:path((?!.*\\.).*)",
      "destination": "/expense-tracker/index.html"
    },
    {
      "source": "/:path((?!.*\\.).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        }
      ]
    }
  ]
}
