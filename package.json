{
  "name": "bill-reader-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Fuel Tracker and Expense Tracker micro-frontends",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:old": "npm run dev:api & vite",
    "dev:api": "node server.js",
    "dev:frontend": "vite",
    "build": "turbo run build --continue || vite build",
    "build:old": "vite build",
    "preview": "vite preview",
    "lint": "turbo run lint --continue || echo 'No packages to lint yet'",
    "test": "turbo run test --continue || echo 'No packages to test yet'",
    "clean": "turbo run clean --continue || echo 'No packages to clean yet'",
    "prepare": "husky install"
  },
  "keywords": [
    "fuel-tracker",
    "pwa",
    "motorcycle",
    "ocr",
    "react",
    "firebase"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "browser-image-compression": "^2.0.2",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "firebase": "^10.7.1",
    "lucide-react": "^0.298.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.3",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "turbo": "^2.5.8",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^0.17.4",
    "workbox-window": "^7.0.0"
  },
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
